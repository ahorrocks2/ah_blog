<%= render "layouts/errors", :object => @user %>

<%= simple_form_for(@user, html: { class: 'form-vertical'}) do |f| %>
  <div class="form-group">
    <%= f.label :email, "Email", class: 'label-control' %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :password, "Password",  class: 'label-control' %>
    <%= f.text_area :password, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm your Password",  class: 'label-control' %>
    <%= f.text_area :password_confirmation, class: 'form-control' %>
  </div>
  <%= f.button :submit, class: 'form-control' %>
<% end %>
