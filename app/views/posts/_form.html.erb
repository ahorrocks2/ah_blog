<%= render "layouts/errors", :object => @post %>

<%= simple_form_for(@post, html: { class: 'form-vertical'}) do |f| %>
  <div class="form-group">
    <%= f.label :title, "Title", class: 'label-control' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content, "Content",  class: 'label-control' %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.association :tags, label_method: :description, as: :check_boxes, label: 'Choose your tags' %>
    <p><%= link_to 'Or Create a New Tag', new_tag_path %></p>
  </div>
  <%= f.button :submit, class: 'form-control' %>
<% end %>
