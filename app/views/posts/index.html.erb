<h2>All Posts</h2>

<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% elsif flash[:alert] %>
  <div class="alert alert-warning"><%= flash[:alert] %></div>
<% end %>

<ul style="list-style:none;">
  <% @posts.each do |post| %>
    <li><%= link_to "#{post.title}", post_path(post) %></li>
  <% end %>
</ul>

<hr>
<% if current_user %>
  <%= link_to "New Post", new_post_path, class: 'btn btn-small btn-default' %>
<% end %>
<hr>
