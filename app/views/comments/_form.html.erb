<%= render "layouts/errors", :object => @comment %>

<%= simple_form_for([@post, @comment], html: { class: 'form-vertical'}) do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name", class: 'label-control' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content, "Comment:",  class: 'label-control' %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>
  <%= f.button :submit, class: 'form-control' %>
<% end %>
